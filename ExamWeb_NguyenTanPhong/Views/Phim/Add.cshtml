@model Phim

<form asp-action="Add" method="post">
    <h2>Them Phim Moi</h2>
    <hr />
    <div class="form-group">
        <label>Tựa Phim</label>

        <input asp-for="TuaDe" class="form-control" />
        <span asp-validation-for="TuaDe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Diễn Viên</label>
        <input asp-for="DienVien" class="form-control" />
        <span asp-validation-for="DienVien" class="text-danger"></span>
    </div>
    <div class="form-control">
        <label>Trong Nước</label>
        <input asp-for="TrongNuoc" />
        <span asp-validation-for="TrongNuoc" class="text-danger"></span>
        @*<label>Ngoài Nước</label>
        <input asp-for="NgoaiNuoc" />
        <span asp-validation-for="NgoaiNuoc" class="text-danger"></span>*@
    </div>
    <div class="form-group">
        <label>Giá vé</label>

        <input asp-for="GiaVe" class="form-control" />
        <span asp-validation-for="GiaVe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Thời Lượng</label>

        <input asp-for="ThoiLuong" class="form-control" />
        <span asp-validation-for="ThoiLuong" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"> Save </button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>